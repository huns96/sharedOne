<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.sharedOne.mapper.CategoryMapper">
    <select id="selectById" resultType="com.example.sharedOne.domain.CategoryDto">
        select m.id, m.name FROM category_main c
        JOIN category_middle m
        ON c.main_id = m.middle_main_id
        WHERE c.main_id = #{main_id};
    </select>

</mapper>